<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@mipmap/detail_back">

    <ImageView
        android:id="@+id/mysand_imv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/mysand_job_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        />
    <TextView
        android:id="@+id/mysand_job_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/mysand_job_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="30dp"
        android:textColor="#5070F0"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/mysand_job_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#565657"
        android:background="#F2F2F2"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/mysand_job_where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/mysand_job_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#5070F0"
        android:textSize="14sp" />
</RelativeLayout>