<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".course.newsFragment">
    <ImageView
        android:id="@+id/stuc_news_inform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/stuc_news_back"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/stuc_news_inform"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="33dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通知"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="90dp"/>

    <ImageView
        android:id="@+id/stuc_news_discuss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/stuc_news_back"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="100dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/stuc_news_discuss"
        android:layout_marginTop="117dp"
        android:layout_marginLeft="33dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="讨论"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginTop="124dp"
        android:layout_marginLeft="90dp"/>

</RelativeLayout>