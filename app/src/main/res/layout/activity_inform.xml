<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".course.news.informActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#1E90FF">

        <ImageButton
            android:id="@+id/inform_back"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:background="@mipmap/stucourse_back" />
        <TextView
            android:id="@+id/inform_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#EFEFEF"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/inform_informback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
    <ImageView
        android:id="@+id/inform_newis1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/stuc_news_informnew"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="310dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/inform_inform"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_zhixian"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="130dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="明天台风，休息一天"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"/>
    <ImageButton
        android:id="@+id/infrom_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/inform_btnback"
        android:background="#00FFFFFF"
        android:layout_marginTop="170dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击查阅"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="173dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/inform_informback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"/>
    <ImageView
        android:id="@+id/inform_newis2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/stuc_news_informnew"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="310dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/inform_inform"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="250dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_zhixian"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="280dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="明天台风，休息一天"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="290dp"/>
    <ImageButton
        android:id="@+id/infrom_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/inform_btnback"
        android:background="#00FFFFFF"
        android:layout_marginTop="320dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击查阅"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="323dp"/>
</RelativeLayout>