<?xml version="1.0" encoding="utf-8"?>
<com.example.student.contacts.RecyclerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/slide"
        android:layout_toRightOf="@+id/layout_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/delete"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:text="删 除"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_left"
        android:orientation="horizontal">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            >
            <com.example.student.customclass.RadiusImageView
                android:layout_marginLeft="15dp"
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tv_detail"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#A0A0A2"
                android:textSize="10sp"/>
            <ImageView
                android:layout_marginTop="70dp"
                android:layout_marginLeft="85dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/my_zhixian"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#A0A0A2"
                android:textSize="15sp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
</com.example.student.contacts.RecyclerItemView>