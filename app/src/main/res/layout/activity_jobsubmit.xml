<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".course.job.jobsubmitActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#1E90FF">

        <ImageButton
            android:id="@+id/jobsubmit_back"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:background="@mipmap/stucourse_back" />
        <TextView
            android:id="@+id/jobsubmit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上交实验一报告"
            android:textSize="20sp"
            android:textColor="#EFEFEF"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@mipmap/my_zhixian"
        android:layout_marginTop="115dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/job_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分值：10.0"
        android:textColor="#939496"
        android:textSize="11sp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/job_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余提交时间：342分钟"
        android:textColor="#939496"
        android:textSize="11sp"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作业详情"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_zhixian"
        android:layout_marginTop="155dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/job_detail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="    完成实验一报告中的内容，实验报告要求可在资源内下载，本次实验纳入最终考核，希望同学们重视"
        android:textColor="#939496"
        android:textSize="13sp"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="30dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@mipmap/my_zhixian"
        android:layout_marginTop="300dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交作业"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_zhixian"
        android:layout_marginTop="340dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/jobbtnimv"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:background="#00000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传附件"
        android:textColor="#939496"
        android:textSize="11sp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="50dp"
        />
    <ImageButton
        android:id="@+id/santjob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/jobbtn"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="30dp"
        android:background="#00000000"/>
    <ImageView
        android:id="@+id/santjobimv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="90dp"
        android:background="#00000000"/>

    <TextView
        android:id="@+id/santjobtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="410dp"
        android:textColor="#939496"
        android:textSize="7sp" />
    <EditText
        android:id="@+id/answer_edit"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:hint="请在这里输入你的答案"
        android:background="@mipmap/jobdit"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:gravity="fill_horizontal"
        />
    <ImageButton
        android:id="@+id/job_santbtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/jobsanrbtn"
        android:background="#FFFFFFFF"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="680dp"
        />
    <TextView
        android:id="@+id/job_issand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提     交"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="690.5dp"/>

</RelativeLayout>