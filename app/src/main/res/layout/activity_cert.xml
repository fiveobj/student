<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my.id.CertActivity"
    android:background="@drawable/cert_background"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/cert_back"
        android:layout_width="16dp"
        android:layout_height="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:background="@mipmap/fab_backup"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学生认证"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="认证通过后，可参与教师发布的实训课程，接收本校课程的相关信息，获得更多的机会"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:id="@+id/cert_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@mipmap/cert_must"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校名称"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/cert_school_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:text="请选择"
            android:textSize="15sp"
            android:textColor="#949494"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/my_inter" />

    </RelativeLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_zhixian"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:id="@+id/cert_dapartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@mipmap/cert_must"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="院系"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/cert_dapartment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:text="请选择"
            android:textSize="15sp"
            android:textColor="#949494"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/my_inter" />

    </RelativeLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_zhixian"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:id="@+id/cert_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@mipmap/cert_must"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/cert_major_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:text="请选择"
            android:textSize="15sp"
            android:textColor="#949494"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/my_inter" />

    </RelativeLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_zhixian"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:id="@+id/cert_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@mipmap/cert_must"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/cert_class_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:text="请选择"
            android:textSize="15sp"
            android:textColor="#949494"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/my_inter" />

    </RelativeLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_zhixian"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:id="@+id/cert_sid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@mipmap/cert_must"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"/>

        <EditText
            android:background="#00FFFFFF"
            android:id="@+id/cert_sid_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:hint="请输入"
            android:textSize="15sp"
            android:textColorHint="#949494"
            />


    </RelativeLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_zhixian"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        >
        <ImageButton
            android:id="@+id/cert_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_login_backg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即认证"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"

            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>