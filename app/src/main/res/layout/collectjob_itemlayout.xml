<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@mipmap/detail_back">

    <TextView
        android:id="@+id/job_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/job_where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#565657"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/job_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#565657"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="80dp"
        />
    <TextView
        android:id="@+id/job_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#565657"
        android:background="#F2F2F2"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/job_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#565657"
        android:background="#F2F2F2"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="80dp"
        />
   <ImageView
       android:id="@+id/job_imv"
       android:layout_width="24dp"
       android:layout_height="24dp"
       android:layout_marginTop="80dp"
       android:layout_marginLeft="30dp"
       />
    <TextView
        android:id="@+id/job_compeny_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#000000"
        android:background="#F2F2F2"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="60dp"
        />
    <TextView
        android:id="@+id/job_compeny_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="#565657"
        android:background="#F2F2F2"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="60dp"
        />
    <TextView
        android:id="@+id/job_compeny_peo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="#565657"
        android:background="#F2F2F2"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="120dp"
        />

    <TextView
        android:id="@+id/job_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#5070F0"
        android:textSize="13sp" />
</RelativeLayout>