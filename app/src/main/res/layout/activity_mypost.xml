<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my.mypost.mypostActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#1E90FF">

        <ImageButton
            android:id="@+id/mypost_back"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:background="@mipmap/stucourse_back" />
        <TextView
            android:id="@+id/jobsubmit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="理想职位"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#EFEFEF"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mypost_postname"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="岗位"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/mypost_postname"
            style="@style/Button.Primary.wrap"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:background="#00FFFFFF"
            android:text="点击选择岗位"
            android:textColor="#565656" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_zhixian"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="45dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mypost_money"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="薪资"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:id="@+id/mypost_money1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="130dp"
            android:background="#F0F0F0"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:src="@mipmap/my_zhixian"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="25dp"
            android:scaleType="fitXY"/>

        <EditText
            android:id="@+id/mypost_money2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="230dp"
            android:background="#F0F0F0"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_zhixian"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="45dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mypost_where"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="地区"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/mypost_where"
            style="@style/Button.Primary.wrap"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:background="#00FFFFFF"
            android:text="点击选择地区"
            android:textColor="#565656" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_zhixian"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="45dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mypost_company"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="公司"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/mypost_company"
            style="@style/Button.Primary.wrap"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:background="#00FFFFFF"
            android:text="点击选择公司类型"
            android:textColor="#565656" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_zhixian"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="45dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mypost_walfare"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="福利"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            />
        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/mypost_walfare"
            style="@style/Button.Primary.wrap"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:background="#00FFFFFF"
            android:text="点击选择福利"
            android:textColor="#565656" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_zhixian"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="45dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mypost_time"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="上班时间"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/mypost_time1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="130dp"
            android:background="#F0F0F0"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="天/周"
            android:textColor="#000000"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="18dp"
            />
        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/mypost_time2"
            style="@style/Button.Primary.wrap"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="220dp"
            android:background="#00FFFFFF"
            android:text="点击选择时间"
            android:textColor="#565656" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_zhixian"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="45dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/mypost_more"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="更多描述"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/detail_back"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/mypost_more"
            android:layout_width="316dp"
            android:layout_height="108dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:background="#00FFFFFF" />
</RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="90dp"
    android:layout_gravity="center">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/con_btn"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"/>
</RelativeLayout>


</LinearLayout>