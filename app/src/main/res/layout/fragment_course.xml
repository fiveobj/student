<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".course.courseFragment"
    android:background="#FFF5F5F5"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FFFFFF">

        <AutoCompleteTextView
            android:id="@+id/course_searchauto"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="29dp"
            android:background="@mipmap/course_searchback"
            android:paddingLeft="10dp"
            android:textSize="15sp">

        </AutoCompleteTextView>

        <ImageButton
            android:id="@+id/course_search"
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="256dp"
            android:layout_marginLeft="256dp"
            android:layout_marginTop="29dp"
            android:background="@mipmap/course_search" />
        <ImageButton
            android:id="@+id/course_add"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@mipmap/course_add"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="308dp"
            android:layout_marginLeft="308dp"
            android:layout_marginTop="29dp"/>
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="64dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/stuing"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:text="在学课程"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:textSize="15sp" />
        </RelativeLayout>


        <ListView
            android:id="@+id/stu_course"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:divider="#FFF5F5F5"
            android:dividerHeight="0dp"
            android:listSelector="#00000000"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/recom"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:text="推荐课程"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:textSize="15sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/recom_course"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:divider="#FFF5F5F5"
            android:dividerHeight="7dp"
            android:background="#FFFFFF"/>
    </LinearLayout>

</ScrollView>



</RelativeLayout>