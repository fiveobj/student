<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#FFFFFF">

    <com.example.student.customclass.RadiusImageView
        android:id="@+id/myaccount_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/myaccount_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/myaccount_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#868686"
        android:textSize="10sp"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:id="@+id/myaccount_item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="300dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="111dp"
        android:textColor="#EEB026"
        android:textSize="15sp"
        android:textStyle="bold"/>
</RelativeLayout>